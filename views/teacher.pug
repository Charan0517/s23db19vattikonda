extends layout

block content
  h1= title
 
  - let result = results
  div(class="container-fluid")
    div(class="row")
      each item,index in result
       - let destination = `dispatch(\"/teacher/update?id=${item._id}\")`
       div(class="col-sm-2",onClick=`buy(${index})`) Item#{item.teacher_name}(#{item.salary}) is #{item.subject}
      
        button.btn( class="btn-primary ml-1", onclick= destination) Update
  script.
   function dispatch(path){
    window.location.href=path
   }
  
